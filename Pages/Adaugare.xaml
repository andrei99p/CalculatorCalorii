<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorCalorii.Pages.Adaugare"
             Title="Adaugare">
    <StackLayout 
        VerticalOptions="Start"
        Padding="10">
        
        <Editor 
            x:Name="txtNume"
            BackgroundColor="LightGray" 
            VerticalOptions="Center" 
            Placeholder="Nume" 
            PlaceholderColor="Black" 
            TextColor="Black"
            Margin="5,10"/>

        <Editor 
            x:Name="txtCalorii"
            BackgroundColor="LightGray" 
            VerticalOptions="Center" 
            Placeholder="Calorii" 
            PlaceholderColor="Black" 
            TextColor="Black"
            Margin="5,10"
            Keyboard="Numeric"  />

        <Button
            x:Name="Adauga"
            Clicked="Adauga_Clicked"
            Text="Adauga"
            VerticalOptions="End"
            FontAttributes="Bold"
            FontSize="Small"
            Margin="10"/>

    </StackLayout>

</ContentPage>